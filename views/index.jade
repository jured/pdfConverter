    <form action="convert()" method="post" class="submitForm">
      <p>
      Filename:&nbsp;
      <input type="text" filename="name" value="Your file name">
      </p>

      <p>Page size:&nbsp;
        <input type="submit" value="A3">
        <input type="submit" value="A4">
        <input type="submit" value="A5">
        <input type="text" value="Custom">
      </p>

      <br>

      <p>Rows:&nbsp;<input type="number" value="3" size="2" max="100" min="0">&nbsp;&nbsp;&nbsp;
      Columns:&nbsp;<input type="number" value="2" size="2" max="100" min="0"></p>
      <p>
          <div id='page'></div>
      </p>

      <br>
      <p><input type="submit" value="Convert"></p>

    </form>



